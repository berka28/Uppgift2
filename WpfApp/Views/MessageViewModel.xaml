                    <TextBlock x:Name="from" Text="" FontSize="18" FontWeight="Bold" />
                    <TextBlock x:Name="to" Text="" FontSize="18" FontWeight="Bold" />
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="0" >
                    <Ellipse Height="60" Width="60" Fill="#FFCDE1F3" RenderTransformOrigin="-0.262,0.467" />
                </StackPanel>

            </Grid>

            <Grid Grid.Row="1" Margin="0,15,0,15" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

            </Grid>
            <TextBlock Grid.Row="1" x:Name="body" TextWrapping="Wrap" Text="" FontSize="14" Padding="10,10,30,10" Grid.ColumnSpan="2" />

