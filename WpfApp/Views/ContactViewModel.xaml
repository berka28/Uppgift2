            <Controls:ContactControl ContactName="Contact 2" ContactTitle="Role" />
            <Controls:ContactControl ContactName="Contact 3" ContactTitle="Role" />
            <Controls:ContactControl ContactName="Contact 4" ContactTitle="Role" />
            <Controls:ContactControl ContactName="Contact 5" ContactTitle="Role" />
            <Controls:ContactControl ContactName="Contact 6" ContactTitle="Role" />
            <Controls:ContactControl ContactName="Contact 7" ContactTitle="Role" />
        </StackPanel>
    </Grid>
</UserControl>
